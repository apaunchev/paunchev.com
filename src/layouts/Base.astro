---
import { Image } from "@astrojs/image/components";
import portrait from "../assets/portrait.png";
import NavLink from "../components/NavLink.astro";
import SVGLink from "../components/SVGLink.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;

const defaultTitle = "Angel Paunchev";
const defaultDescription =
  "Angel is a software engineer from Bulgaria who turns ambitious ideas into reality.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description ?? defaultDescription} />
    <title>{title ?? defaultTitle}</title>
    <link
      as="font"
      crossorigin="anonymous"
      href="/fonts/inter.woff2"
      rel="preload"
      type="font/woff2"
    />
    <link
      as="font"
      crossorigin="anonymous"
      href="/fonts/inter-italic.woff2"
      rel="preload"
      type="font/woff2"
    />
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <main>
      <div class="px-6 pt-8 pb-12 md:px-12 md:pt-12 lg:px-24 lg:pt-16">
        <div class="max-w-prose">
          <a href="/" class="flex h-16 w-16 rounded-full">
            <Image
              src={portrait}
              alt="Portrait of the author"
              width={200}
              aspectRatio="1:1"
              class="h-16 w-16 rounded-full border-2 border-transparent transition-colors hover:border-brand"
            />
          </a>
          <slot />
        </div>
      </div>
    </main>
    <footer class="border-t border-zinc-100">
      <div class="px-6 pt-4 pb-8 md:px-12 md:pb-12 lg:px-24 lg:pb-16">
        <div
          class="flex max-w-prose flex-col justify-start gap-3 sm:flex-row sm:justify-between"
        >
          <nav class="flex gap-3">
            <NavLink href="/">Home</NavLink>
            <NavLink href="/notes">Notes</NavLink>
            <NavLink href="/bookmarks">Bookmarks</NavLink>
          </nav>
          <div class="flex items-center gap-2">
            <SVGLink
              href="https://www.linkedin.com/in/apaunchev/"
              label="LinkedIn"
            >
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
