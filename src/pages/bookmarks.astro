---
import ContentLink from "../components/ContentLink.astro";
import BaseLayout from "../layouts/Base.astro";
import bookmarks from "../data/bookmarks.json";
---

<BaseLayout title="Bookmarks">
  <h1 class="mb-3 mt-6 text-3xl font-semibold tracking-tight">Bookmarks</h1>
  <div class="flex flex-col gap-4">
    {
      bookmarks.map(({ url, title, description, quote }) => (
        <ContentLink
          href={url}
          title={title}
          description={quote ? `“${quote}”` : description}
        />
      ))
    }
  </div>
</BaseLayout>
